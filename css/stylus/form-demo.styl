form.demo-form
  width 28%
  float right
  position relative

  p
    text-align center
    margin-left 0
    padding 1.2em
    font-weight 300

  .fields
    input
      input()

  .submit
    width 100%

    input
      input()
      float left
      padding 1.2em
      background $red
      width 100%
      color white
      font-size 1.3em

      &:hover
        cursor pointer
        background $red