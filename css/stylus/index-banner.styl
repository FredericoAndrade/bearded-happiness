.banner
  height 322px
  width 100%
  overflow hidden
  background $light-blue
  margin-bottom 4em
  position relative

  img
    display none
    width 72%
    position absolute
    z-index  0
    margin-top -10%

  section
    width 72%
    float left
    position absolute
    top 0

    h1, h2
      white-text()
      text-align left

    h1
      text-align center
      font-size 3em
      font-weight bold
      margin-bottom 0
      margin-top 2em

    h2
      color #fff
      font-weight 300
      font-size 2em
      margin .5em 0 2em 2em

  form
    .fields
      input
        &:first-of-type
          border-top none