.banner
  width 100%
  overflow hidden
  background $light-blue
  margin-bottom 4em
  position relative
  background-image url("../img/3.jpg")
  background-size cover

  img
    display none
    width 72%
    position absolute
    z-index  0
    margin-top -10%

  section
    width 100%
    margin 5% 0
    float left

    h1, h2
      white-text()
      text-align left

    h1
      text-align center
      font-size 3em
      font-weight bold
      margin-bottom 0
      margin-top 1em

    h2
      color #fff
      font-weight 300
      font-size 2em
      margin .5em 0 0 0
      text-align center

  form
    width 28%
    float right
    position relative
    margin 0 5% 5% 5%
    component-shadow()

    .fields
      input
        &:nth-of-type(1)
          border-top none
          border-radius $radius 0 0 0

        &:nth-of-type(2)
          border-radius 0 $radius 0 0

    .submit
      input
        &:last-of-type
          border-radius 0 0 $radius $radius