*
  box-sizing border-box
  color $blue
  font-family $lato
  font-weight 300
  transition all ease-in-out $transition-time

.hidden
  display none !important

// COMMENTS
.comment
  color red

a
  text-decoration none
  color $red

  &:hover
    color $hover

.active
  color $hover

html, body
  width 100%
  height 100%
  margin 0
  padding 0

.container
  .content
    margin auto
    max-width 960px
    padding 0

  .text-page
    margin auto
    max-width 750px

    ul
      margin-left 3em

ul
  padding 0