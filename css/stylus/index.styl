.container
  float left
  width 100%
.content
  h1
    text-align center

  section.social-proof
    margin 3em 0

    ul
      display inline-block
      padding 0
      list-style-type none

      li.source
        width 33%
        float left

        &:first-of-type
          .logo
            img
              padding 7px 0 6px 0

        &:nth-of-type(2)
          .logo
            img
              padding  5px 0

        &:last-of-type
          .logo
            img
              padding 1px 0 2px 0

        .logo
          height 80px

          img
            width 200px
            margin auto
            display block

        .person
          margin 1em 0
          p
            text-align center
            color #999
            margin 0

            &.name
              font-weight bold

            &.title
              font-size .8em

        .quote
          text-align center
          margin 2em 1.5em 0 1.5em
          font-size .8em
          font-style italic

  section.press
    margin 5em 0 2em 0

    ul
      display inline-block
      list-style-type none
      width 100%

      li
        width (100/7)%
        float left

        a
          display block
          width 100%
          text-align center

          img
            height 30px
            opacity .4

          &:hover
            img
              opacity 1

section.features
  margin-top 2em
  display inline-block
  width 100%
  background $light-blue

  h1
    white-text()
    margin 1em auto

  h1, ul
    width 960px

  ul
    margin auto
    list-style-type none
    padding-bottom 3em

    li
      width 100%
      padding 1em
