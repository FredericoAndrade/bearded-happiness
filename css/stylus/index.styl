.background
  width 100%
  max-height 750px
  overflow hidden

  img
    width 100%

  section
    width 100%
    position absolute
    top 100px

    h1, h2
      color white

    form.demo-form
      float right
      width 350px

      input
        font-size 1em
        padding 1em
        border none
        border-bottom 1px solid lighten($blue, 40%)
        outline none

      .fields
        input
          width 100%
          border-radius .2em
          margin 0 0 .2em 0

          &:focus
            background lighten($blue, 97%)

          &:last-of-type
            margin 0

      .submit
        width 100%

        input
          margin-top 1em
          border-radius .2em

          padding 1em
          background white
          width 100%

.content
  h1
    text-align center

  section.social-proof
    ul
      display inline-block
      padding 0
      list-style-type none

      li.source
        width 33%
        float left

        &:first-of-type
          .logo
            img
              padding 7px 0 6px 0

        &:nth-of-type(2)
          .logo
            img
              padding  5px 0

        &:last-of-type
          .logo
            img
              padding 1px 0 2px 0

        .logo
          height 80px

          img
            width 200px
            margin auto
            display block

        .person
          margin 1em 0
          p
            text-align center
            color #999
            margin 0

            &.name
              font-weight bold

            &.title
              font-size .8em

        .quote
          text-align center
          margin 2em 1.5em 0 1.5em
          font-size .8em
          font-style italic

  section.press
    margin 5em 0 2em 0

    ul
      display inline-block
      list-style-type none
      width 100%

      li
        width (100/7)%
        float left

        a
          display block
          width 100%
          text-align center