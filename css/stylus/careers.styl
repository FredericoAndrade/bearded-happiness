.background.careers
  background $light-blue
  display inline-block
  width 100%
  text-align center

  h1
    margin 2em auto
    white-text()
    font-size 3em

.careers
  h1, section
    max-width 960px

  >h1
    padding 0 2em
    margin 2em auto 1em auto

  section
    // overflow auto
    margin 3em auto
    padding 0 4em
    clear both

    p
      margin 1em 1em
      text-indent 1em
      max-width 760px
      margin 1em auto

      &.note
        color darken($light-blue, 20%)

    &.investors
      ul
        list-style-type none
        display table

        li
          display inline-block
          width 270px
          height 75px
          padding 3px
          margin 1.1em 3px
          float left
          text-align center
          font-size 1.3em
          text-transform uppercase

          a
            display inline-block

            img
              &#yc
                margin 10px auto
                height 50px

              &#foundersFund
                margin auto
                height 70px

              &#omidyar
                margin auto
                height 70px

              &#rre
                margin auto
                height 70px

              &#ia
                margin 15px auto
                height 40px

              &#qv
                margin auto
                height 70px

              &#fivehundred
                margin auto
                height 70px

              &#nycSeed
                margin auto
                height 70px

              &#highPeaks
                margin 17px auto
                height 35px

    &.openings
      div
        display table
        margin auto
        background lighten($light-blue, 85%)
        // border 1px solid lighten($light-blue,60%)
        border-radius $radius
        padding-bottom 1em
        component-shadow()

        h2
          background #fff
          border-bottom 2px solid lighten($light-blue,60%)
          padding 1em 2em
          margin 0

        p, ul
          padding 0 2em

        ul
          margin-left  2.5em

    &.apply
      margin 5em auto

      h2
        text-align center

      div
        display table
        margin auto
        max-width 350px
        border-radius $radius
        component-shadow()

        p
          text-indent 0
          width 100%
          background white
          padding 1em
          margin 0
          text-align center
          border-radius $radius $radius 0 0

          b
            span
              opacity .4

        form
          input
            input()

            &:last-of-type
              border-bottom 2px solid lighten($light-blue, 60%)

        label
          background #fff
          line-height 4em
          text-align center
          display block
          border-bottom 1px solid lighten($light-blue,60%)

          textarea
            border-top 1px solid lighten($light-blue,60%)
            line-height initial
            display block
            input()
            float left
            margin-top 1em
            resize none

        button.submit
          input()
          display block
          float left
          background $red
          color white
          font-size 1.3em
          border-radius 0 0 $radius $radius

          &:hover
            background-color $red
            color white
            cursor pointer