    &.container
      ul
        display inline-block
        list-style-type none
        margin-top 0
        margin-bottom 10em

        li
          text-align center
          background lighten($light-blue, 30%)
          // padding 340px 0 0
          width 100%
          float left

          span
            margin 2em auto
            display inline-block

          p
            margin-left 0

          &:nth-of-type(even)
            background initial

          &.click
            // padding-bottom 310px

            // span
            //   padding 4em 5em
            //   background #fff
            //   component-shadow()

              a
                font-size 16px
                padding .8em 1.5em
                background #94ce5c
                border 1px solid #94ce5c
                color white
                border-radius 1.5*$radius
                cursor pointer
                font-weight 400

                &:hover
                  background #85c745

            div
              &.icons
                margin 200px auto 0
                display inline-block

                p
                  color #BFDCF1
                  font-weight 300
                  font-size 9em
                  margin 0
                  float left

                img
                  // position relative
                  // z-index 1
                  margin -110px -170px
                  // display block
                  float left
                  height 500px

              &.copy
                margin-bottom 200px
                // top -340px
                // position relative
                // z-index 10

          &:nth-of-type(2)
            // padding-bottom 310px

            span
              padding 4em 5em
              background #fff
              component-shadow()

              a
                padding .8em 1.5em
                background #F9F8DE
                border 1px solid #cece28
                color #62b3e0
                font-size 16px
                cursor pointer
                font-weight 400

                &:hover
                  color #4e8fb3

          &:nth-of-type(3)
            // padding-bottom 310px

            span
              component-shadow()
              background #F3F6F8
              padding 1em

              p
                margin-top 0
                text-align left

              form
                background #fff

                fieldset
                  border none
                  padding 0
                  margin 0

                  label
                    padding 1em
                    text-align left
                    display block
                    border 1px solid transparent

                    &:hover
                      background lighten(#F3F6F8, 60%)
                      cursor pointer
                      border-color darken(#F3F6F8, 3%)

                    input
                      margin-right 1em

          span.next
            margin 0 //10em 0 0 0
            padding 4em 5em
            box-shadow none
            color darken($light-blue, 10%)
            background transparent
            border none
            width 100%
            display block

